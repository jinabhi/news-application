<html>

<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

  <div class="container">
    {{#if msg}}
    <div class="alert alert-success alert-dismissible" style="width: 500px;"><a href="#" class="close"
        data-dismiss="alert" aria-label="close">&times;</a> <strong>{{msg}}</strong> </div>
    {{/if}}

    <table class='table table-hover'>
      {{#each data}}
      <tr>
        <td>
          <center><strong>
              <h3>{{this.title}}</h3>
            </strong></center>
        </td>
        <td>
          <a href="deletePost?_id={{this.postId}}" class="glyphicon glyphicon-trash"
            data-confirm="Are you sure to delete this item?"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
            href="upPost?_id={{this.postId}}" class="glyphicon glyphicon-edit open-button"></a>
        </td>
      </tr>
      <tr>
        <td>
          <center><img src="/{{this.imageName}}" width="700" height="400"></center>
        </td>
      </tr>
      <tr>
        <td>{{this.description}}</td>
      </tr>
      <tr>
        <td></td>
      </tr>

      {{/each}}
    </table>
  </div>

</body>

</html>